{
  "version": "1.0.0",
  "description": "Automated handover and knowledge transfer configuration",
  "last_updated": "2025-11-06",

  "automated_tasks": [
    {
      "name": "Daily Health Check",
      "frequency": "daily",
      "cron": "0 9 * * *",
      "script": "./scripts/daily-health-check.sh",
      "output": ".ai/reports/daily-health-{date}.json",
      "retention_days": 30,
      "alerts": {
        "test_failures": true,
        "health_score_drop": true,
        "coverage_drop": true
      }
    },
    {
      "name": "Weekly Dependency Audit",
      "frequency": "weekly",
      "cron": "0 10 * * 1",
      "script": "./scripts/dependency-audit.sh",
      "output": ".ai/reports/dependency-audit-{date}.json",
      "retention_days": 90,
      "checks": [
        "outdated_packages",
        "security_vulnerabilities",
        "license_compliance"
      ]
    },
    {
      "name": "Monthly Documentation Sync",
      "frequency": "monthly",
      "cron": "0 11 1 * *",
      "script": "./scripts/doc-sync.sh",
      "output": ".ai/reports/doc-sync-{date}.json",
      "retention_days": 365,
      "actions": [
        "regenerate_api_docs",
        "check_doc_coverage",
        "validate_examples",
        "update_changelog"
      ]
    },
    {
      "name": "Continuous Blueprint Compliance",
      "frequency": "on_commit",
      "trigger": "git_hook_pre_push",
      "script": "./scripts/blueprint-sync-check.sh",
      "output": ".ai/reports/blueprint-compliance-{date}.json",
      "fail_on_violation": true
    },
    {
      "name": "Performance Baseline Update",
      "frequency": "weekly",
      "cron": "0 12 * * 0",
      "script": "./scripts/update-performance-baseline.sh",
      "output": ".ai/performance-baseline.json",
      "retention_days": 365
    }
  ],

  "knowledge_base_updates": [
    {
      "trigger": "on_commit",
      "action": "update_module_map",
      "target": ".ai/module-map.json",
      "script": "./scripts/generate-module-map.sh"
    },
    {
      "trigger": "on_test_run",
      "action": "update_test_coverage",
      "target": ".ai/test-coverage.json",
      "script": "./scripts/update-test-coverage.sh"
    },
    {
      "trigger": "on_benchmark",
      "action": "update_performance_baseline",
      "target": ".ai/performance-baseline.json",
      "script": "./scripts/update-performance-baseline.sh"
    },
    {
      "trigger": "on_pr_merge",
      "action": "update_health_score",
      "target": ".ai/health-score-history.json",
      "script": "./scripts/calculate-health-score.sh"
    }
  ],

  "self_healing": {
    "enabled": true,
    "checks": [
      {
        "name": "test_failures",
        "action": "create_diagnostic_report",
        "script": "./scripts/diagnose-test-failures.sh"
      },
      {
        "name": "performance_regression",
        "action": "bisect_regression",
        "script": "./scripts/bisect-regression.sh",
        "threshold": "10%"
      },
      {
        "name": "documentation_drift",
        "action": "regenerate_docs",
        "script": "./scripts/regenerate-docs.sh"
      },
      {
        "name": "security_vulnerabilities",
        "action": "create_security_issue",
        "script": "./scripts/create-security-issue.sh",
        "priority": "critical"
      }
    ]
  },

  "notification_channels": {
    "slack": {
      "enabled": false,
      "webhook_url": "env:SLACK_WEBHOOK_URL",
      "channels": {
        "critical": "#alerts-critical",
        "warnings": "#alerts-warnings",
        "info": "#dev-updates"
      }
    },
    "email": {
      "enabled": false,
      "smtp_server": "env:SMTP_SERVER",
      "recipients": {
        "critical": ["team@spectralchain.io"],
        "warnings": ["dev@spectralchain.io"]
      }
    },
    "github": {
      "enabled": true,
      "create_issues": true,
      "labels": {
        "test_failure": "bug, automated",
        "security": "security, critical",
        "performance": "performance, automated"
      }
    }
  },

  "retention_policy": {
    "reports": {
      "daily": 30,
      "weekly": 90,
      "monthly": 365,
      "critical": "永久"
    },
    "metrics": {
      "performance_baselines": 365,
      "health_scores": 365,
      "test_coverage": 90
    }
  }
}
